@using Client.Models.Dtos.StockMovement
@model List<GetStockMovement>

<section id="container">
    <section id="main-content">
        <section class="wrapper">
            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel">
                        <div class="header-container">
                            <div class="text-right " style="margin-right: 20px;">
                                <button id="openAddModalBtn" class="btn btn-success btn-md"><i class="fa fa-plus"></i></button>
                            </div>
                        </div>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th><i class="fa fa-bullhorn"></i> Id</th>
                                    <th class="hidden-phone">   <i class="fa fa-question-circle"></i> Ürün İsmi</th>
                                    <th><i class="fa fa-question-circle"></i> Giriş/Çıkış</th>
                                    <th><i class="fa fa-question-circle"></i> Miktar</th>
                                    <th><i class="fa fa-question-circle"></i> Tarih</th>
                                    <th><i class="fa fa-question-circle"></i> Kaynak/Hedef</th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.GetProduct.Name</td>
                                        <td>@(item.IsEntry==true ? "Giriş" : "Çıkış")</td>
                                        <td>@item.Quantity @item.GetProduct.Unit</td>
                                        <td>@item.Date</td>
                                        <td>@item.SourceDestination</td>
                                        <td>
                                            <button id="openUpdateSupplierModal" class="btn btn-primary btn-md" supplierId="@item.Id"><i class="fa fa-pencil"></i></button>
                                            <button data-bs-toggle="modal" class="btnDelete btn btn-danger btn-md" supplierId="@item.Id"><i class="fa fa-trash-o "></i></button>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div><!-- /col-m   d-12 -->
            </div><!-- /row -->
        </section><! --/wrapper -->
    </section><!-- /MAIN CONTENT -->
</section>
