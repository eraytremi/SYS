@using Client.Models.Dtos.StockMovement
@model List<GetStockMovement>

<section id="container">
    <section id="main-content">
        <section class="wrapper">
            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel">
                        <div class="header-container">
                        </div>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th><i class="fa fa-bullhorn"></i> Id</th>
                                    <th class="hidden-phone">   <i class="fa fa-question-circle"></i> Ürün İsmi</th>
                                    <th><i class="fa fa-question-circle"></i> Giriş/Çıkış</th>
                                    <th><i class="fa fa-question-circle"></i> Miktar</th>
                                    <th><i class="fa fa-question-circle"></i> Tarih</th>
                                    <th><i class="fa fa-question-circle"></i>Kaynak </th>
                                    <th><i class="fa fa-question-circle"></i> Hedef</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.GetProduct.Name</td>
                                        <td>@(item.IsEntry == true ? "Giriş" : "Çıkış")</td>
                                        <td>@item.Quantity @item.GetProduct.Unit</td>
                                        <td>@item.Date</td>
                                        <td>@item.Source</td>
                                        <td>@item.Destination</td>
                                        <td>
                                            <button data-bs-toggle="modal" class="btnApprove btn-primary btn-md" stockMovementId="@item.Id"><i class="fa fa-check"></i></button>
                                            <button data-bs-toggle="modal" class="btnReject btn btn-danger btn-md" stockMovementId="@item.Id"><i class="fa fa-trash-o "></i></button>
                                        </td>
                                    </tr>                              
                                }
                            </tbody>
                        </table>
                    </div>
                </div><!-- /col-m   d-12 -->
            </div><!-- /row -->
        </section><! --/wrapper -->
    </section><!-- /MAIN CONTENT -->
</section>

<script src="~/js/stockstatus.js"></script>

