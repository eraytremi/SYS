+@using Client.Models.Dtos.Product
@model List<GetProduct>

<section id="container">

    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Talep Ekle</h3>

            <!-- BASIC FORM ELEMENTS -->
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="form-panel">      
                        <form class="form-horizontal style-form" method="post" id="demandForm">
                            <label for="productName">Ürün İsmi :</label>
                            <select class="form-control" id="productName" name="productName">
                                <option value="2">Ürün Seçiniz</option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.Name">@item.Name</option>
                                }
                            </select>

                            <label for="quantity">Miktar: </label>
                            <input type="number" class="form-control" id="quantity" name="quantity">

                            <label for="description">Açıklama:</label>
                            <input type="text" class="form-control" id="description" name="description">
                            <br />
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button type="button" class="btn btn-primary" id="sendDemand">Gönder</button>
                                    <button type="reset" class="btn btn-default">Temizle</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div><!-- col-lg-12-->
            </div><!-- /row -->
        </section>
    </section>
    <!--footer end-->
</section>

<script src="~/js/demand.js" charset="windows-1254"></script>
